{
  "name": "kristine",
  "version": "0.1.0",
  "main": "src/Kristine.ts",
  "private": true,
  "description": "Kristine is a simple discussion forum you can easily customize to make as unique as your community",
  "author": {
    "name": "cadox8",
    "email": "cadox8@gmail.com",
    "url": "https://cadox8.es"
  },
  "license": "GNU (https://github.com/cadox8/Kristine/blob/master/LICENSE)",
  "scripts": {
    "dev": "nodemon",
    "prod": "npm prune && npm install && npm run build",
    "build": "tsc --module commonjs && npm run start",
    "start": "node --experimental-modules ./build/Website.js",
    "style": "node-sass -x --output-style compressed src/front/public/sass/kristine.sass src/front/public/css/kristine.css",
    "update": "ncu -u && npm update && npm prune && npm install && npm prune"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadox8/Kristine.git"
  },
  "bugs": {
    "url": "https://github.com/cadox8/Kristine/issues"
  },
  "homepage": "https://github.com/cadox8/Kristine#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "views",
      "public"
    ],
    "ext": "ts, js, pug",
    "delay": 2,
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "uuid": "^8.3.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-mongo": "^4.4.1",
    "mongoose": "^5.12.7",
    "cookie-parser": "~1.4.5",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "pug": "3.0.2",
    "tslog": "^3.2.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/uuid": "^8.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.0.2",
    "@types/pug": "^2.0.4",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.5.10",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "bulma": "^0.9.2",
    "node-sass": "^5.0.0"
  }
}

    "@types/express-session": "^1.17.0",
    "@types/http-errors": "^1.8.0",
    "@types/mysql": "^2.15.15",
    "@types/node": "^14.6.0",
    "@types/node-emoji": "^1.8.1",
    "@types/pug": "^2.0.4",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",

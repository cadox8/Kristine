    "node-fetch": "^2.6.0",
    "@ptkdev/logger": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.5",
    "body-parser": "^1.19.0",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "http-errors": "~1.8.0",
    "mysql": "^2.18.1",
    "node-emoji": "^1.10.0",
    "pug": "3.0.0",
    "mjml": "^4.6.3"
  },

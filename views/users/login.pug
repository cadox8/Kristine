extends ../layout

block content
    section.section
        .container
            .columns
                .column.is-3.has-text-centered
                    p Future Text :D
                .column.is-6
                    .box
                        .media-content
                            .content
                                if data.errorCode !== -1
                                    .notification.is-danger.has-text-black #{data.errorMsg}

                                form(action="" method="post" autocomplete='off')
                                    .field
                                        label.label #{data.lang.getLang('user.login.user')}
                                        .control.has-icons-left
                                            input.input(type="text" placeholder="kristine@kristine.com" name="login" id="login" required=)
                                            span.icon.is-small.is-left
                                                i.fas.fa-envelope
                                    .field
                                        label.label #{data.lang.getLang('user.login.password')}
                                        .control.has-icons-left
                                            input.input(type="password" placeholder="********" name="password" required=)
                                            span.icon.is-small.is-left
                                                i.fas.fa-lock
                                    .field.is-grouped
                                        .control
                                            button.button.is-success #{data.lang.getLang('menu.login')}
                                        .control
                                            a.button.is-success.is-light(href='/register') #{data.lang.getLang('menu.register')}

                .column.is-3.has-text-centered
                    p Future Text :D
section.hero.is-dark
    .hero-body.is-paddingless.is-marginless
        .container
            br
            h1.title #{data.siteName}
    .hero-foot
        .section.is-paddingless.is-marginless
            .container
                nav.navbar.is-transparent
                    .navbar-brand
                        .navbar-burger.burger(data-target="menu")
                            span
                            span
                            span
                    .navbar-menu(id="menu")
                        .navbar-start
                            .navbar-item
                                .field.is-grouped
                                    p.control
                                        a.button.is-black(href="/")
                                            span.icon.has-text-primary
                                                i.fas.fa-home
                                            span #{data.lang.getLang('menu.index')}
                        .navbar-end
                            if session == null
                                .navbar-item
                                    .field.has-addons
                                        p.control
                                            a.button.is-black(href="/login")
                                                span.icon.has-text-primary
                                                    i.fas.fa-sign-in-alt
                                                span #{data.lang.getLang('menu.login')}
                                        p.control
                                            a.button.is-black(href="/register")
                                                span.icon.has-text-primary
                                                    i.fas.fa-user
                                                span #{data.lang.getLang('menu.register')}
                            else
                                .navbar-item.has-dropdown.is-hoverable
                                    a.navbar-link
                                        span.icon.has-text-warning
                                            i.fas.fa-user
                                        span ---
                                    .navbar-dropdown
                                        .navbar-item
                                            .field.is-grouped
                                                p.control
                                                    a.button.is-black(href="/profile") #{data.lang.getLang('menu.profile')}
                                        .navbar-item
                                            .field.is-grouped
                                                p.control
                                                    a.button.is-danger(href="/logout")
                                                        span.icon.has-text-black
                                                            i.fas.fa-sign-out-alt
                                                        span.has-text-black #{data.lang.getLang('menu.logout')}
                            p.navbar-item.is-hidden-mobile